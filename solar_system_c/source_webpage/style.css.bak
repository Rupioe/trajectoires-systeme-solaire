.bouton {
text-decoration: none;
padding: 10px;
font-family: verdana;
font-size: 0.8em;
color: #bfbfbf;
background-color: #1f497d;
border-radius: 20px;
-webkit-border-radius: 20px;
-moz-border-radius: 20px;
border: 4px outset #4f81bd;
}


.bouton:hover {
padding: 10px;
color: #7f7f7f;
background-color: #0f243e;
border: 4px inset #8db3e2;
}

.bouton:focus{
color: #7f7f7f;
background-color: #0f243e;
border: 4px inset #8db3e2;
}
